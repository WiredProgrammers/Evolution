                            android:text="@string/drain_clogging" />

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/stinking"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/drain_clogg"
